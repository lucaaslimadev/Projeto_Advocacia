{
  "name": "advocacia-app",
  "version": "1.0.0",
  "description": "Controle de Documentos Jurídicos para Advogados",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "electron-pack-win": "npm run build && electron-builder --win",
    "preelectron-pack": "npm run build"
  },
  "build": {
    "appId": "com.advocacia.app",
    "productName": "Controle de Documentos Jurídicos",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "portable",
      "publisherName": "Sistema Advocacia"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Controle de Documentos Jurídicos"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "cross-spawn": "^7.0.6",
    "docx": "^8.2.2",
    "electron-is-dev": "^2.0.0",
    "lucide-react": "^0.263.1",
    "pdf-lib": "^1.17.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.2",
    "electron": "^25.3.1",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
